{
  "name": "paie-api",
  "version": "0.0.0",
  "description": "The Paie API calculates all the taxes applicable to a salary in France.",
  "keywords": [ "payslip", "opendata", "tax", "France" ],
  "homepage": "https://github.com/sgmap/paie-api",
  "bugs": "https://github.com/sgmap/paie-api/issues",
  "author": "Matti Schneider <matti.schneider@data.gouv.fr>",
  "license": "AGPL",

  "config" : {
    "port" : "8080"
  },

  "engines" : {
    "node" : ">=0.10.0",
    "npm" : ">=1.3 <2"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/sgmap/paie-api.git"
  },
  "dependencies": {
    "hapi": "^7.0.0",
    "swaggerize-hapi": "git://github.com/sgmap/swaggerize-hapi.git#sgmap",
    "good": "^4.0.0",
    "good-console": "^2.0.1",
    "request-json": "^0.5.0"
  },
  "devDependencies": {
    "swagger-tools": "~0.6.12",
    "js-yaml": "^3.2.2",
    "david": "^5.0.0",
    "enjoi": "^0.1.16",
    "mocha": "^2.0.1",
    "coffee-script": "^1.8.0",
    "should": "^4.3.0",
    "mootools": "^1.5.1"
  },
  "scripts": {
    "compile": "js-yaml swagger.yaml > swagger.json",
    "test": "npm run compile && swagger-tools validate swagger.json && mocha && david",
    "start": "npm run compile && node index"
  }
}
